{
  "manifest_version": 3,
  "name": "Resalta",
  "version": "0.1",
  "description": "Subraya texto de cualquier web y gu√°rdalo en carpetas. Organiza tus ideas mientras navegas.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
